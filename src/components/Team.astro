<style>
  body {
    overflow: auto;
  }

  .header-image1 {
    position: absolute;
    inset: 0;
    opacity: 0.5;
    z-index: -1;
  }

  .grid2 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-content: center;
    justify-items: center;
    padding-top: 50px;
    margin-top: 50px;
  }

  .grid2 img {
    height: 80%;
  }

  .team_box {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Tre kolonner med samme bredde */
    justify-content: center; /* Centrer indholdet horisontalt */
    justify-items: center;
    padding: 20px;
    background-color: #ffffff5b;
    margin-bottom: 100px;
  }

  .team_box img {
    max-width: 100%; /* Sørg for, at billederne ikke strækker sig ud over deres container */
    height: auto; /* Bevar billedets proportioner */
  }

  h1 {
    text-align: center;
  }
</style>
